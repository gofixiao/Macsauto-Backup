<dx:DXWindow
    x:Class="Macsauto.Presentation.WPF.Common.User.Login.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="Login" Height="300" Width="423"
    >
    
    <Grid DataContext="User">
        <TextBox Text="{Binding Username}" Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" VerticalAlignment="Top" Width="120" />
        <TextBox Text="{Binding Password}" Height="23" HorizontalAlignment="Left" Margin="12,41,0,0" VerticalAlignment="Top" Width="120" />
        <Button Command="{Binding DoLogin}" Content="Login" Height="23" HorizontalAlignment="Left" Margin="14,76,0,0" Name="button1" VerticalAlignment="Top" Width="75" />
    </Grid>
</dx:DXWindow>
